	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in library 'libsearchlight'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--lib",
					"--package=libsearchlight"
				],
				"filter": {
					"name": "libsearchlight",
					"kind": "lib"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug benchmark 'search_bench'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bench=search_bench",
					"--package=libsearchlight"
				],
				"filter": {
					"name": "search_bench",
					"kind": "bench"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'searchlight'",
			"cargo": {
				"args": [
					"build",
					"--bin=searchlight",
					"--package=searchlight"
				],
				"filter": {
					"name": "searchlight",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'searchlight'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=searchlight",
					"--package=searchlight"
				],
				"filter": {
					"name": "searchlight",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}